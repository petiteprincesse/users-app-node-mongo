<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
      <p class="alert">{{loginError}}</p>
      {{/if}}
      <h1>Авторизоваться</h1>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="login" name="login" type="text" class="validate" required>
          <label for="login">Логин</label>
          <span class="helper-text" data-error="Введите логин"></span>
        </div>
        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Пароль</label>
          <span class="helper-text" data-error="Введите пароль"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary" type="submit">Войти</button>
      </form>
    </div>
  </div>
</div>